/* components/song-item-v1/song-item-v1.wxss */
.song-item {
    display: flex;
    padding: 16rpx 0;
    align-items: center;
}
.image {
    height: 120rpx;
    width: 120rpx;
    border-radius: 16rpx;
}
.content {
    margin-left: 16rpx;
    flex: 1;
}
.content .name {
    font-size: 32rpx;
    color: #555;
}
.content .source {
    font-size: 24rpx;
    color: #999;
    margin-top: 16rpx;
}
