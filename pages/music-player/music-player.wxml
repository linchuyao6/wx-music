<!--pages/music-player/music-player.wxml-->

<image
    class="bg-image"
    src="{{currentSong.al.picUrl}}"
    mode="aspectFill"
    alt=""
/>
<view class="bg-cover"></view>

<!-- 自定义导航栏 -->
<nav-bar bind:leftclick="onNavBackTap">
    <view class="tabs" slot="center">
        <block wx:for="{{pageTitles}}" wx:key="*this">
            <view
                class="item {{currentPage===index?'active':''}}"
                bind:tap="onNavTabItemTap"
                data-index="{{index}}"
            >
                {{item}}
            </view>
            <view class="divider" wx:if="{{index!==pageTitles.length-1}}"
                >|</view
            >
        </block>
    </view>
</nav-bar>

<!-- 具体内容 -->
<swiper
    style="height: {{contentHeight}}px;"
    bindchange="onSwiperChange"
    current="{{currentPage}}"
>
    <swiper-item class="music">
        <view class="album">
            <image
                src="{{currentSong.al.picUrl}}"
                mode="widthFix"
                class="image"
            />
        </view>
        <view class="info">
            <view class="name">{{currentSong.name}}</view>
            <view class="singer">{{currentSong.ar[0].name}}</view>
        </view>
        <view class="oneLyric"> cbajscnjaksckj</view>
        <view class="progress">
            <slider class="slider" block-size="12"> </slider>
            <view class="time">
                <view class="current">00:00</view>
                <view class="duration">12:00</view>
            </view>
        </view>
        <view class="controls">
            <image
                src="/assets/images/player/play_order.png"
                class="btn mode"
            />
            <image src="/assets/images/player/play_prev.png" class="btn prev" />
            <image
                src="/assets/images/player/play_resume.png"
                class="btn play"
            />
            <image src="/assets/images/player/play_next.png" class="btn next" />
            <image
                src="/assets/images/player/play_music.png"
                class="btn list"
            />
        </view>
    </swiper-item>
    <swiper-item class="lyric"> cnsjacnj</swiper-item>
</swiper>
